<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andro="http://schemas.android.com/apk/res/android"
    andro:orientation="vertical"
    andro:layout_width="match_parent"
    andro:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        andro:layout_width="match_parent"
        andro:layout_height="wrap_content"
        andro:background="@color/colorPrimary"
        andro:id="@+id/toolbar"/>
    <android.support.v4.widget.DrawerLayout
        andro:layout_width="match_parent"
        andro:layout_height="match_parent"
        andro:id="@+id/drawerLayout">
        <LinearLayout
            andro:layout_width="match_parent"
            andro:layout_height="match_parent"
            andro:orientation="vertical">
            <SeekBar
                andro:layout_width="match_parent"
                andro:layout_height="wrap_content"
                andro:id="@+id/seekBar"
                andro:max="25"/>
            <ImageView
                andro:layout_width="match_parent"
                andro:layout_height="match_parent"
                andro:src="@android:drawable/ic_media_play"
                andro:id="@+id/originalImageView"/>
        </LinearLayout>

        <ListView
            andro:layout_width="100dp"
            andro:layout_height="match_parent"
            andro:id="@+id/leftDrawer"
            andro:foregroundGravity="left"
            andro:choiceMode="singleChoice"
            andro:divider="#818181"
            andro:dividerHeight="1dp"
            andro:background="#E3F2FD"/>
        <FrameLayout
            andro:layout_width="100dp"
            andro:layout_height="match_parent"
            andro:id="@+id/rightDrawer"
            andro:foregroundGravity="right"
            andro:choiceMode="singleChoice"
            andro:divider="#818181"
            andro:dividerHeight="1dp"
            andro:background="#9E9E9E"/>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
